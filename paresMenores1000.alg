algoritmo "pares"

var

resu, num: inteiro
inicio

escreval (" Soma dos numeros pares menores que 1000 ")
         para num <- 0 ate 998 passo 2 faca
         resu <- resu + num
         fimpara
escreval (" o resultado da soma dos numeros pares menores que 1000 é:", resu)

fimalgoritmo
